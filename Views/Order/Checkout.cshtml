@model Order

<div class="order-container">
    <h1>Оформление заказа</h1>
    <form asp-action="Checkout" method="post" class="form">
        <div>
            <label asp-for="Name"></label>
            <div>
                <input asp-for="Name"/>
                <span asp-validation-for="Name"></span>
            </div>
        </div>
        <div>
            <label asp-for="Surname"></label>
            <div>
                <input asp-for="Surname"/>
                <span asp-validation-for="Surname"></span>
            </div>
        </div>
        <div>
            <label asp-for="Adress"></label>
            <div>
                <input asp-for="Adress"/>
                <span asp-validation-for="Adress"></span>
            </div>
        </div>
        <div>
            <label asp-for="Phone"></label>
            <div>
                <input asp-for="Phone"/>
                <span asp-validation-for="Phone"></span>
            </div>
        </div>
        <div>
            <label asp-for="Email"></label>
            <div>
                <input asp-for="Email"/>
                <span asp-validation-for="Email"></span>
            </div>
        </div>
        <hr />
        <input type="submit" value="Завершить заказ" class="button"/>
    </form>
</div>