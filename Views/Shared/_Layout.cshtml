<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/css/normalize.css" type="text/css" asp-append-version="true">
    <link rel="stylesheet" href="/css/style.css" type="text/css" asp-append-version="true">
</head>
<body>
    <header class="header">
            <nav class="nav">
                <a href="/" class="logo">
                    <img src="/img/LOGO.svg" alt="site logo" class="logo-img">
                </a>
                <ul class="menu">
                    <li class="menu-item">
                        <a href="/" class="menu-link">Каталог</a>
                    </li>
                    <li class="menu-item">
                        <a href="/Cart/Index" class="menu-link"><img src="/img/cart.svg" alt="Корзина" class="cart-img"></a>
                    </li>
                </ul>
            </nav>
    </header>

    @RenderBody()

    <footer class="footer">© 2023 Tech-store</footer>
</body>
</html>